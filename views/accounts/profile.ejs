<% layout('layout') -%>

<div class="container">
  <div class="row">
    <div class="col-sm-6 col-md-4">
      <img class="img-circle img-responsive img-center" src="<%= user.profile.image %>" alt="">
      <br />
      <p>Name: <%= user.profile.name %></p>
      <p>email: <%= user.email %></p>

      <% if (user.address === "" || typeof user.address === 'undefined') { %>

      <p>address: <span style="color: #c0392b; font-weight:bold"> You have no address</span></p>

      <% } else { %>

      <p>address: <%= user.address %></p>

      <% } %>

      <a href="/edit-profile" class="btn btn-primary btn-lg">Edit Profile</a>
    </div>

    <div class="col-md-6">
      <h2 class="text-center">History</h2>
      <table class="table table-striped sticky-header">
        <thead>
          <tr>
            <th>Item's Name</th>
            <th>Price</th>
          </tr>
        </thead>
        <tbody>
          
          <% for (var i =0; i < user.history.length; i++) { %>
            <tr>
              <td><%= user.history[i].item.name %></td>
              <td><%=  user.history[i].item.paid %></td>
            </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>

</div>
